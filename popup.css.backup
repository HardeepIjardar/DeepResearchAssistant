height: 44px;
border-radius: 12px;
cursor: pointer;
transition: all 0.3s ease;
display: flex;
align-items: center;
justify-content: center;
}

.send-btn:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
}

.quick-actions {
    display: flex;
    gap: 8px;
}

.quick-action {
    flex: 1;
    background: #f8f9fa;
    border: 1px solid #e9ecef;
    padding: 8px 12px;
    border-radius: 8px;
    cursor: pointer;
    font-size: 12px;
    color: #6c757d;
    transition: all 0.3s ease;
    display: flex;
    display: flex;
    flex-direction: column;
    padding: 16px;
}

.search-section {
    margin-bottom: 20px;
}

.search-section h3 {
    margin-bottom: 12px;
    color: #333;
    font-size: 16px;
}

